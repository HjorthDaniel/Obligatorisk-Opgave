}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Om Os - Ragnarock Roskilde</title>

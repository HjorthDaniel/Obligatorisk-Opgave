        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 70px;
        padding: 15px;
        display: fixed;
        justify-content: center;
        align-items: center;
        height: 110vh;
        overflow-x: auto;
    }

    .container {
